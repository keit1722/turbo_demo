<div class="container mx-auto px-4">
  <h1 class="text-3xl font-bold mb-4">ユーザー一覧</h1>
    <div class="mb-4">
    <%= turbo_frame_tag User.new do %>
      <%= link_to "新規作成", new_user_path, class: "px-4 py-2 bg-green-500 text-white rounded shadow hover:bg-green-700" %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 gap-4">
    <%= turbo_frame_tag 'users' do %>
      <% @users.each do |user| %>
        <%= render "users/user", user: user %>
      <% end %>
    <% end %>
  </div>
</div>
