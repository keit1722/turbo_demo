<%= turbo_frame_tag user do %>
  <div class="flex items-center justify-between bg-gray-50 p-4 mb-4 rounded shadow">
    <div class="flex space-x-4">
      <p class="text-lg">ID: <strong><%= user.id %></strong></p>
      <p class="text-lg">名前: <strong><%= user.name %></strong></p>
    </div>
    <div class="flex space-x-4">
      <%= link_to "編集", edit_user_path(user), class: "text-blue-500 hover:text-blue-700" %>
      <%= link_to "削除", user_path(user), class: "text-red-500 hover:text-red-700", data: { turbo_method: :delete, turbo_confirm: '削除しますか？' } %>
    </div>
  </div>
<% end %>
